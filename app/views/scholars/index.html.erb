<h1>Student List</h1>
<% if teacher_signed_in? or admin_signed_in?%>
    <table>
        <tr>
            <th>Name</th>
            <th>E-Mail</th>
            <th>Contact Number</th>
            <th>Parent Name</th>
            <% if teacher_signed_in? or admin_signed_in?%>
                <th>Edit</th>
            <% end %>
            <th>Destroy</th>
        </tr>
        <% @student.each do |students| %>
            <tr>
            <td><%= students.full_name %></td> 
           <td><%= students.email %></td>
            <td><%= students.contact_number %></td>
            <td><%= students.parent_name %></td>
            <% if teacher_signed_in? or admin_signed_in? %>
            <td><%= link_to "Edit", edit_student_registration_path %></td>
            <% end %>
            <% if teacher_signed_in? or admin_signed_in?%>
            <td><%= link_to "Destroy", scholar_path(students), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to destroy student ?"
              } %></td>
              <% end %>
            </tr>
        <% end %>
    </table>
    
<% elsif %>
    <table>
    <tr>
        <th>Name</th>
        <th>Image</th> 
        <th>E-Mail</th>
        <th>Contact Number</th>
        <th>Parent Name</th>
        <th>Edit</th>
    </tr>
        <tr>
        <td><%= current_student.full_name %></td> 
        <td><%= image_tag current_student.image, style: "height: 200px; width: 300px;" %></td> 
        <td><%= current_student.email %></td>
        <td><%= current_student.contact_number %></td>
        <td><%= current_student.parent_name %></td>
        <td><%= link_to "Edit", edit_student_registration_path %></td>
    </table>
<% end %>

<%= button_to "Go back", root_path, method: :get, class: "btn-custom1"%>





